<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <version>1</version>
    <threadsafe>true</threadsafe>
    <runtime>java8</runtime>
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/classes/logging.properties"/>

        <property name="spring.jpa.hibernate.ddl-auto" value="update"/>
        <property name="spring.datasource.initialization-mode" value="always"/>
        <property name="spring.datasource.continue-on-error" value="true"/>
        <property name="spring.cloud.gcp.sql.database-name" value="llas_cards"/>
        <property name="spring.cloud.gcp.sql.instance-connection-name" value="all-stars-api:us-central1:all-stars-api-db"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

    </system-properties>
</appengine-web-app>